.page-header
  %h3
    Editing
    = link_to "<%= human_name.downcase %> #{@<%= singular_table_name %>.id}", <%= options[:ns] %>_<%= singular_table_name %>_path(@<%= singular_table_name %>)

= simple_form_for [:<%= options[:ns] %>, @<%= singular_table_name %>], :html => { :class => "form-horizontal", :role => "form" } do |f|
  = render "form", { :f => f }
